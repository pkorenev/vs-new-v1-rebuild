//#portfolio-banner-wrapper

#portfolio-banner-outer{
  .banner-holder-figure{
    padding-top: 20%;
    .fixed-banner-wrapper{
      //z-index: 1;
      .fixed-banner-holder-figure{
        padding-top: 20%;

        #nav-arrows{
          position: absolute;
          display: block;
          top: 50%;
          left: 0;
          margin-top: -45px;
          width: 100%;
          height: 0;

          > .prev{
            position: absolute;
            display: block;
            left: -90px;
            height: 90px;
            width: 180px;
            overflow: hidden;

            &:hover{
              //width: 180px;
              left: 0;
            }

            img{
              float: right;

            }

            .arrow{
              float: right;
            }
          }

          > .next{
            position: absolute;
            display: block;
            right: -90px;
            height: 90px;
            width: 180px;
            overflow: hidden;


            &:hover{
              //width: 180px;
              right: 0;
            }

            img{
              float: left;
            }

            .arrow{
              float: left;
              //background-position-x: 100%;
              background-position: right;
            }

          }

          > .next, > .prev{
            &, & * {
              -webkit-transition: 0.3s all;
              -moz-transition: 0.3s all;
              -ms-transition: 0.3s all;
              -o-transition: 0.3s all;
              transition: 0.3s all;
            }
            z-index: 5;

            &:hover{
              .arrow{
                background-color: #eb1374;
              }
            }


          }

          .arrow{
            background-image: url( <%= asset_path('banners/main-banner-arrows.png') %> );
            background-size: cover;
            width: 90px;
            height: 90px;
            display: block;
            position: relative;
          }

          img{
            width: 90px;
            height: 90px;
            display: block;
            position: relative;
          }
        }

        .slide{
          position: absolute;
          width:100%;
          height: 100%;
          top:0;
          left:0;
          margin: 0;
          padding:0;
          background-repeat: no-repeat;
          -webkit-background-size: cover;
          -moz-background-size: cover;
          -o-background-size: cover;
          background-size: cover;



        }

        .slide{
          top: 0;
          position: absolute;
          bottom: 0;
          left: 0;
          right: 0;
          background-repeat: no-repeat;

          .slide-description{
            right:3em;
            //top:30%;
            position: absolute;
            display: block;
            width:50%;
            min-width: 300px;

            .title{
              color:#9d0f03;

            }

            .description{
              color:black;
              font-weight: 600;

              -webkit-transition-duration: 0.3s;
              -moz-transition-duration: 0.3s;
              -ms-transition-duration: 0.3s;
              -o-transition-duration: 0.3s;
              transition-duration: 0.3s;

              -webkit-transition-property: opacity;
              -moz-transition-property: opacity;
              -ms-transition-property: opacity;
              -o-transition-property: opacity;
              transition-property: opacity;
            }

            .title h1{
              text-align: left;
              font-size: 3rem;

              //line-height: 1.95rem;
              line-height: 1.1;
              margin-bottom: 0.5rem;
            }

            .description{
              text-align: left;
            }

            position: absolute;
            top: 20%;
            right: 3rem;

            @media screen and (max-width: 1300px){
              top: 10%;

              h1{


              }

              .description{
                //text-align: left;
              }
            }
          }
        }
      }
    }
  }
}


