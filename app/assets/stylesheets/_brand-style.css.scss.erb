}


@mixin brand-button( $size: medium, $float: false ){
  background: url(<%= asset_path('static_images/branded-button-background.jpg') %>) repeat;
  color: white;
  border: 0;
  text-decoration: none;
  text-transform: uppercase;
  text-align: center;
  float: none;

  position: relative;


  display: inline-block;



  @if $float == true {
    display: block;
    float: left;
  }

  @if $size == medium{
    padding-left: 30px;
    padding-right: 30px;

    padding-top: rem-calc(8);
    padding-bottom: rem-calc(8);

    //line-height: #{ rem-calc( calc-line-height($medium-button-font-size + 16) )};
    //line-height: rem-calc( calc-line-height($medium-button-font-size) + 16 );


    //height: $medium-button-height;
    //line-height: $medium-button-height;

    color: $medium-button-font-size;
    font-weight: $medium-button-font-weight;
    font-size: rem-calc($medium-button-font-size);
    font-family: $medium-button-font-family;
  }

  @if $size == large{
    padding-left: 30px;
    padding-right: 30px;

    padding-top: rem-calc(12);
    padding-bottom: rem-calc(12);



    //line-height: #{ $large-button-font-size * 1.380 + 24}px ;



    font-weight: #{$large-button-font-weight};
    font-size: rem-calc($large-button-font-size);
    font-family: #{$large-button-font-family};
  }


}



.brand-button{
  @include brand-button;

  &.float{
    @include brand-button($float: true);
  }

  &.large{
    @include brand-button( $size: large )
  }
}



.brand-tab{
  background-color: $tab-background-color;
  color: $tab-text-color;
  height: $tab-height;

  float: left;
  position: relative;
  display: block;

  .tab-title{
    color: inherit;
    padding: 0;

    font-size: #{rem-calc(24)};
    line-height: #{ rem-calc(50) };
  }

  a{
    color: inherit;
    font: inherit;
    line-height: inherit;
    text-decoration: none;
    border: none;
    display: block;
    text-transform: uppercase;
  }

  &:hover{
    background-color: $tab-hover-background-color;
  }

  &.active{
    background: $tab-active-background;
  }


}

img.grayscale {
  filter: url("data:image/svg+xml;utf8,<svg xmlns=\'http://www.w3.org/2000/svg\'><filter id=\'grayscale\'><feColorMatrix type=\'matrix\' values=\'0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0\'/></filter></svg>#grayscale"); /* Firefox 10+, Firefox on Android */
  filter: gray; /* IE6-9 */
  -webkit-filter: grayscale(100%); /* Chrome 19+, Safari 6+, Safari 6+ iOS */

  -webkit-transition: -webkit-filter .3s ease-in; /* chrome & safari */
  -moz-transition: filter .3s ease-in; /* firefox and other gecko-based */
  -ms-transition: filter .3s ease-in; /* ie 10+ */
  -o-transition: filter .3s ease-in; /* opera */
  transition: filter .3s ease-in; /* w3 (future standard) */
}

img.grayscale.disabled, img.grayscale:hover {
  filter: none;
  -webkit-filter: grayscale(0%);
}

