#slide-db {
  background: url("/assets/banners/ii-v2/bg-main.jpg") repeat-x #0859a8; }
  #slide-db .layer img {
    opacity: 0;
    width: 100%;
    position: relative; }
  #slide-db .layer.description.final-position, #slide-db .layer.description.display-slide {
    left: 50%;
    top: 15%;
    color: white !important;
    text-align: left;
    width: 45%; }
    #slide-db .layer.description.final-position h2, #slide-db .layer.description.display-slide h2 {
      color: inherit;
      font-size: 0.6em;
      margin: 0; }
      #slide-db .layer.description.final-position h2 a, #slide-db .layer.description.display-slide h2 a {
        color: inherit; }
    #slide-db .layer.description.final-position p, #slide-db .layer.description.display-slide p {
      color: inherit;
      font-size: 0.2em;
      font-weight: 900;
      margin-bottom: 5px; }
    #slide-db .layer.description.final-position h2 + p, #slide-db .layer.description.display-slide h2 + p {
      margin-top: 10px; }
    #slide-db .layer.description.final-position p + p, #slide-db .layer.description.display-slide p + p {
      margin-top: 0; }
  #slide-db .layer.description.display-slide {
    left: 120%;
    top: 10%; }
  #slide-db .layer.crystal {
    background-repeat: no-repeat;
    background-size: 100%; }
  #slide-db .layer.ii-crystal-blured-medium {
    background-image: url(/assets/banners/ii-v2/left-middle.png); }
    #slide-db .layer.ii-crystal-blured-medium.final-position, #slide-db .layer.ii-crystal-blured-medium.display-slide {
      top: 17%;
      left: 6%;
      width: 10%; }
    #slide-db .layer.ii-crystal-blured-medium.display-slide {
      left: -10%; }
  #slide-db .layer.ii-crystal-main {
    background-image: url(/assets/banners/ii-v2/crystal-main.png); }
    #slide-db .layer.ii-crystal-main.final-position, #slide-db .layer.ii-crystal-main.display-slide {
      top: 0%;
      left: 15%;
      width: 20%; }
    #slide-db .layer.ii-crystal-main.display-slide {
      top: -100%; }
  #slide-db .layer.ii-crystal-medium {
    background-image: url(/assets/banners/ii-v2/right-middle.png); }
    #slide-db .layer.ii-crystal-medium.final-position, #slide-db .layer.ii-crystal-medium.display-slide {
      top: -27%;
      left: 34%;
      width: 10%; }
    #slide-db .layer.ii-crystal-medium.display-slide {
      top: -50%; }
  #slide-db .layer.ii-crystal-blured-small {
    background-image: url(/assets/banners/ii-v2/right-small.png); }
    #slide-db .layer.ii-crystal-blured-small.final-position, #slide-db .layer.ii-crystal-blured-small.display-slide {
      top: 50%;
      left: 39%;
      width: 5%; }
    #slide-db .layer.ii-crystal-blured-small.display-slide {
      opacity: 0; }
  #slide-db .layer.ii-crystal-blured-big {
    background-image: url(/assets/banners/ii-v2/right-big.png); }
    #slide-db .layer.ii-crystal-blured-big.final-position, #slide-db .layer.ii-crystal-blured-big.display-slide {
      top: 65%;
      left: 60%;
      width: 20%; }
    #slide-db .layer.ii-crystal-blured-big.display-slide {
      top: 100%; }
  #slide-db .layer.crystal.selected-layer {
    background: none repeat scroll 0 0 rgba(255, 47, 139, 0.1); }
