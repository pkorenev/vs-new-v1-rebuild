@import "custom_grid/mixin-grid960";

$lightgray_background_color: #e8e8e8;

#home-portfolio{
  //background:white;
}

#portfolio-items-container{
  position: relative;
  background: #fff;
  color: #545454;
}

#portfolio-tabs-wrapper{
  position: relative;
  background-color:   #f0f0f0;
  color: #545454;
}

#home-portfolio #portfolio-tabs-wrapper{
  margin-top:30px;
  
}

#portfolio-index #portfolio-tabs-wrapper{
  margin-bottom:30px;
  
}

#tabs-container{
  width:66.66666%;
  margin-left: auto;
  margin-right:auto;
  position: relative;

  @media(max-width:1200px){
    width:100%;
  }

  
}

.portfolio-tab{
  margin-left:0;
  margin-right: 0;
  padding-left: 1px;
  /*width: 358px !important;*/
  width: 25%;
  height: 50px;
  //background-color: white;
  
  color: #ffffff;
  text-align: center;
  font-weight: normal;
  font-size: 1.2em;
  font-family: 'OpenSansSemibold', Arial, sans-serif;
  cursor: default;

  &:not(.active) {
    cursor: pointer;
  }

  @media(max-width:$mobile_menu_screen_max_width){
    width: 50% ;
    padding-top: 1px ;

  }
}


.portfolio-tab .tab-header{
  cursor: default;
}

.portfolio-tab:first-child{
  padding-left: 0;
}

.portfolio-tab .tab-header{
  color: #fff ;
  text-align: center ;
  font-weight: normal ;
  font-size: 1.2em ;
  font-family: 'OpenSansSemibold', Arial, sans-serif ;
  line-height: 46px ;
  height: 100%;
  margin: 0;
  padding:0 ;
  background: url(<%= asset_path('static_images/branded-button-background.jpg') %>) repeat;/*#e91266;*/
}

.portfolio-tab-index-page{

}

#portfolio-index{
  #portfolio-tabs-wrapper{
    #tabs-container{
      @include container_12;
      @include clearfix;
      .portfolio-tab{
        @include init-grid;
        margin-left: 0;
        margin-right: 0;
      }
    }
  }
}

#portfolio-index .portfolio-tab{
  @include init-grid;
}

#portfolio-index .portfolio-tab::before, .portfolio-tab.bottom-arrow::before,
#portfolio-index .portfolio-tab:hover::before, .portfolio-tab.bottom-arrow:hover::before{
  border-width: 15px 12.5px 0 12.5px ;
  border-color: #ce1165 transparent transparent transparent ;
  border-style: solid;
  top: 50px;

}

#portfolio-index .portfolio-tab:hover::before, .portfolio-tab.bottom-arrow:hover::before{
  border-width: 15px 12.5px 0 12.5px ;
  border-color: #ce1165 transparent transparent transparent ;
  border-style: solid;
  top: 50px;
}

#portfolio-index .portfolio-tab .tab-header{

