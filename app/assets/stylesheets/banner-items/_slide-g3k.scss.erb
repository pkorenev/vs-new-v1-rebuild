#home-banner-outer .slider #slide-g3k{
  background: url(<%= asset_path('banners/g3k/vs-main-g3k-bg-1.jpg') %>) repeat-x #404040;
  background-size: cover;
  .layer{
    &.description{
      &.final-position, &.display-slide{

        .brand-button{
          background: #f36b22;
        }

        .title{
          color: #f36b22;

          a{
              border-bottom-color: rgba(243, 107, 34, 0.3);

              &:hover{
                  border-bottom-color: rgb(243, 107, 34);
              }
          }
        }
      }
    }

    &.crystal{
      background-repeat: no-repeat;
      background-size: 100%;
    }

    &.g3k-left-arrow{
      background-image: url( <%= asset_path('banners/g3k/vs-main-g3k-2.png') %> );
      &.final-position, &.display-slide{
        left: -5.2%;
        top: 40%;
        width:18.5%;
        z-index: 1;
      }

      &.display-slide{
        left:-10%;
      }
    }

    &.g3k-letter{
      background-image: url( <%= asset_path('banners/g3k/vs-main-g3k-1a.png') %>);




      &.final-position, &.display-slide{
        top:13%;
        left:13%;
        width:28%;
        z-index: 1;

      }

      &.display-slide{
        //top:-100%;
        left: -35%;

        //animation-duration: 1s;
        //animation-name: slidein;
      }
    }

    &.g3k-top-center-arrow{
      background-image: url(<%= asset_path( 'banners/g3k/vs-main-g3k-3.png' ) %> );
      opacity: 0.6;

      &.final-position, &.display-slide{
        top: 3%;
        left: 33.3%;
        width:13.5%;
      }

      &.display-slide{
        top:-50%;

        //animation-duration: 1s;
        //animation-name: slidein;
      }
    }

    &.g3k-letter-arrow{
      background-image: url( <%= asset_path('banners/g3k/vs-main-g3k-1b.png') %> );

      &.final-position, &.display-slide{
        //top:50%;
        //left:39%;
        top: 42%;
        left: 28.68%;
        z-index: 1;
        width:10.8%;
      }

      &.display-slide{
        //opacity: 0;
        top: -50%;
      }
    }

    &.g3k-bottom-right-arrow{
      background-image: url( <%= asset_path('banners/g3k/vs-main-g3k-4.png') %> );
      &.final-position, &.display-slide{
        top:65%;
        left:60%;
        width:33.5%;
      }
      &.display-slide{
        top:100%;
      }
    }
  }

  .layer.crystal.selected-layer{
    background: none repeat scroll 0 0 rgba(255, 47, 139, 0.1);
  }
}

