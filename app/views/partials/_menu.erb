                        <span class="header"><%= menu_item[:header] %></span>
                        <span class="description"><%= menu_item[:description] %></span>
                      </a>
                    <% else %>
                      <span class="item-content active">
                        <div class="pink-over"></div>
                        <span class="header"><%= menu_item[:header] %></span>
                        <span class="description"><%= menu_item[:description] %></span>
                      </span>
                    <% end %>

                  </li>

              <% end %>
          <% end %>
          

          
        </ul>
