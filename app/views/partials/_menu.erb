        <ul>
          <% menu_items = get_menu %>
          <% menu_items.each do |menu_item| %>
              <% if menu_item[:id] == 'contact-form' && 1==2 %>

                  <li <% if current_page?(contact_path) %> class="current" <% end %> id="contact-form">
                    <div class="pink-over"></div>
                    <%= link_to("ДЕ", contact_path, :class => "", :id => "modal-btn", :data => { :'fancybox-type' => "iframe", :"fancybox-height" => "746" }) %>
                    <span>Наші контакти</span>
                  </li>

              <% else %>

                  <li data-url="<%= menu_item[:data_url] %>" id="<%= menu_item[:id] %>" title="<%= menu_item[:title] %>" <% if menu_item[:is_active] %> class="current" <% end %>>

                    <% if !menu_item[:is_active] || menu_item[:link] %>
                      <a href="<%= menu_item[:data_url] %>" title = "<%= menu_item[:title] %>" class = "item-content<% if menu_item[:is_active] %> active<% end %><%= menu_item[:id]=='contact-form' ? ' modal-link' : ''  %>" <% if menu_item[:id]=='contact-form' %> data-fancybox-type="iframe" id="modal-btn" <% end %> >
