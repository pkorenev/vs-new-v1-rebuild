<div id="header-wrapper">
  <section id="navigation" class="f-height">
    <div id="mobile-navigation-panel">
    <div id='studio-logo-section'>
      <div id="image-container">
      <% if @home_page %>
        <%= image_tag('static_images/voronin-studio-logo.png', :alt => 'Дизайн студія Миколи Вороніна', :title => 'На головну') %>
      <% else %>
        <%= link_to(image_tag('static_images/voronin-studio-logo.png', :alt => 'Дизайн студія Миколи Вороніна', :title => 'На головну'), root_path(locale: I18n.locale), :title => 'На головну' ) %>
      <% end %>
      </div>
    </div>
    <div id="mobile-menu-button">
    </div>
  </div>
    <div class="menu-wrapper">
      <nav>
        <ul id="lang-bar">
          <% I18n.available_locales.each do |locale| %>
            <li>
              <% if locale != I18n.locale %>
                <% if @translated_locales.include?(locale.to_sym) %>
                  <%= link_to locale.to_s.upcase, @links_for_locales[locale.to_sym] %>
                <% else %>
                  <span class="untranslated-locale" data-href="<%= @links_for_locales[locale.to_sym]  %>"><%= locale.to_s.upcase %></span>
                <% end %>
              <% else %>
                <span><%= locale.to_s.upcase %></span>
              <% end %>
            </li>
          <% end %>
        </ul>

        <ul id="header-menu">
          <% menu_items = get_menu %>
          <% menu_items.each do |menu_item| %>
              <% if menu_item[:id] == 'contact-form' && 1==2 %>

                  <li <% if current_page?(contact_path) %> class="current" <% end %> id="contact-form">
                    <div class="pink-over"></div>
                    <%= link_to("ДЕ", contact_path, :class => "", :id => "modal-btn", :data => { :'fancybox-type' => "iframe", :"fancybox-height" => "746" }) %>
                    <span>Наші контакти</span>
                  </li>

              <% else %>

                  <li data-url="<%= menu_item[:data_url] %>" id="<%= menu_item[:id] %>" title="<%= menu_item[:title] %>" <% if menu_item[:is_active] %> class="current" <% end %>>

                    <% if !menu_item[:is_active] || menu_item[:link] %>
                      <a href="<%= menu_item[:data_url] %>" title = "<%= menu_item[:title] %>" class = "item-content<% if menu_item[:is_active] %> active<% end %><%= menu_item[:id]=='contact-form' ? ' modal-link' : ''  %>" <% if menu_item[:id]=='contact-form' %> data-no-turbolink="" data-fancybox-type="iframe" id="modal-btn" <% end %> >
                        <div class="pink-over"></div>
                        <span class="header"><%= menu_item[:header] %></span>
                        <span class="description"><%= menu_item[:description] %></span>
                      </a>
                    <% else %>
                      <span class="item-content active">
                        <div class="pink-over"></div>
                        <span class="header"><%= menu_item[:header] %></span>
                        <span class="description"><%= menu_item[:description] %></span>
                      </span>
                    <% end %>

                  </li>

              <% end %>
          <% end %>
          

          
        </ul>
      </nav>
    </div>
  </section>
</div>
