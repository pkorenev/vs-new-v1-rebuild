<div id="portfolio-tabs-wrapper">
      <section id="tabs-container">
        <div class="portfolio-tab brand-tab<%= (@active_category)? '' : ' active'  %>" data-tab-index="1" data-filter=".portfolio-item" data-tab-url="<%= portfolio_path %>" data-tab-relative-url=""  id="all-tab">
          <h2 class="tab-title"><%= link_to( 'Усі види', portfolio_path ) %></h2>
        </div>

        <% @portfolio_categories.each_with_index do | c, index | %>
            <div  class="portfolio-tab brand-tab category-tab tab<%= ( @active_category && @active_category.id == c.id )? ' active' : '' %>" data-tab-index="<%= index + 2 %>" data-filter=".<%= c.slug %>" data-tab-url="<%= c.slug %>" data-tab-relative-url="<%= c.slug %>" data-category-url="<%= c.slug %>" id="<%= c.slug %>-tab">
              <h2 class="tab-title"><%= link_to( c.translations_by_locale[I18n.locale].name, portfolio_category_path(category: c.slug) ) %></h2>
            </div>
        <% end %>

      </section>
  </div>

