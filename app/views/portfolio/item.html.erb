<style>
  .BWfade{
    width:100%;
    height: 100%;
  }

  <% if @item.id == 6 %>
    #portfoio-banner-holder .slide-description{
        display: none;
    }
  <% end %>

  <% if @item.id == 14 %>
      #portfolio-body, .page-content, .wb{
        background-color: #3f3d3f !important;
      }
  <% end %>
      /* temporary fixes */

    .slide{
        background-position-x: 50% !important;
    }

    .slide-description{
        max-width: 700px !important ;
    }

    #portfolio-toolbar{
        display: none;
    }


</style>
<% if @item.portfolio_banner %>
<div id="portfolio-banner-wrapper" data-banner-name="<%= @item.portfolio_banner.name %>" class="f-height">
  <%#= @item.portfolio_banner.content.html_safe %>
  <script type="text/javascript" charset="utf-8">
      
  </script>
  <figure id="portfoio-banner-holder">
  <div style="background-image: url(<%= @item.portfolio_banner.background.url %>)" class="slide">
    <div id="nav-arrows">
      <div class="prev">
        <a title="<%= @prev_portfolio.name %>" href="<%= portfolio_item_path(category: @prev_portfolio.portfolio_category.slug, item: @prev_portfolio.slug) %>">
          <span class="arrow"></span>
          <img src="<%= @prev_portfolio.avatar.url(:thumb180) %>" alt="<%= @prev_portfolio.name %>"/>
        </a>
      </div>
      <div class="next">
        <a title="<%= @next_portfolio.name %>" href="<%= portfolio_item_path(category: @next_portfolio.portfolio_category.slug, item: @next_portfolio.slug) %>">
          <span class="arrow"></span>
          <img src="<%= @next_portfolio.avatar.url(:thumb180) %>" alt="<%= @next_portfolio.name %>"/>
        </a>
      </div>


    </div>
    <!--<div class="vs-graphic-part">
      <%= image_tag('portfolio/web/voronin-studio/vs-port-web-left.png', :class => 'bg-vs') %>
      <%= image_tag('portfolio/web/voronin-studio/vs-mac-preview-left.png', :class => 'webpr-vs') %>
    </div>-->

    <div class="slide-description">
      <h1 class="title"><%= raw @item.portfolio_banner.title %></h1>
      <div class="description"><%= raw @item.portfolio_banner.description %></div>
    </div>
  </div>
</figure>
</div><!-- Portfolio Banner Wrapper End here -->

<% end %>

<div class="wb" >&nbsp;</div>


<!-- Render portfolio toolbar -->
<div id="portfolio-toolbar" class="f-height">
  <a href="<%= portfolio_item_path(category: @prev_portfolio.portfolio_category.slug, item: @prev_portfolio.slug) %>" class="pt-left"></a>
  <a href="<%= portfolio_item_path(category: @next_portfolio.portfolio_category.slug, item: @next_portfolio.slug) %>" class="pt-right"></a>
  <% if (@item.result && @item.result.length > 0) || (@item.process && @item.process.length > 0) || (@item.live && @item.live.length > 0) %>
      <div class="container">
      <div class="tabs-wrapper">


          <section id="tabs-container" class="f-height">
            <% if @item.result && @item.result.length > 0  %>
                <div class="portfolio-tab bottom-arrow" id="result" >
                    <p>Результат</p>
                </div>
            <% end %>

            <% if @item.process && @item.process.length > 0  %>
              <div class="portfolio-tab bottom-arrow inactive-portfolio-tab" id="process" >
                <p>Процес</p>
              </div>
            <% end %>

            <% if @item.live && @item.live.length > 0  %>
              <div class="portfolio-tab bottom-arrow inactive-portfolio-tab" id="live">
                <p>В житті</p>
              </div>
            <% end %>
          </section>
        </div>
      </div>
  <% end %>
</div>
<div class="wb">&nbsp;</div>
<div class="page-content white-background portfolio-item-content">
<div class="container portfolio-container">
<!-- Render Portfolio body -->
<div style="width:auto;" id="portfolio-body" class="f-height">
  
  

  <section class="portfolio-content">
    <section class="f-height">

      <script type="text/javascript">
      
      </script>

      <div class="pt-headers"><p><i>Задача:</i><%= @item.task %></p></div>

      <!-- Here will be content -->

      <% if (@item.result && @item.result.length > 0) || (@item.process && @item.process.length > 0) || (@item.live && @item.live.length > 0) %>
          <div class="tabpages portfolio-tabpages">
            <% if @item.result && @item.result.length > 0 %>
                <div class="tabpage active" id="result">


                  <!-- result content -->

                 <!-- <figure class="span12 notebook-figure">
                <div class="web-slider-wrapper">

                  <div class="voronin-studio-banners">
                    <div class="scroller">
                      <%= image_tag('portfolio/web/voronin-studio/vs-main.jpg') %>
                      <%= image_tag('portfolio/web/voronin-studio/vs-about.jpg') %>
                    </div>
                  </div>
                </div>
              </figure> -->

              <%=  raw @item.result  %>


              <!-- /result content -->

                </div>
            <% end %>
            <% if @item.process && @item.process.length > 0 %>
                <div class="tabpage" id="process">

                  <%= raw @item.process %>

                </div>
            <% end %>

            <% if @item.live && @item.live.length > 0 %>
                <div class="tabpage" id="live">
                  <%= raw @item.live %>
                </div>
            <% end %>

          </div>
      <% end %>

      <script type="text/javascript">
      
      </script>
      
    </section>
  </section>

  <div class="developers-panel-wrapper">
<!-- Rendering developer panel partial -->
<%= render :partial => 'partials/developer_panel', :locals => { :project => @item } %>
<!-- /Rendering developer panel partial -->
</div>





</div>


</div>
</div>

<div id="portfolio-item-like-wrapper">
	<div id="portfolio-item-like">
		<img src="/assets/portfolio_item_like.png" />
	</div>
</div>

